<%= form_with model: @customer do |form| %>
  <% if @customer.errors.any? %>
    <h2>Errors</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>  
    </ul>
  <% end %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  
  <div>
    <%= form.label :primary_number %><br>
    <%= form.text_field :primary_number %>
  </div>

  <div>
    <%= form.label :alternate_number %><br>
    <%= form.text_field  :alternate_number %>

  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_area :address %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>